---
import {SEO} from "astro-seo";
import "../../styles/global.css"

const { 
        title = 'Meher Chaitanya', 
        description = 'The personal site of Meher Chaitanya', 
        imageUrl = "/assets/seo-image.jpg" 
    } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />

<link href="/logo-light.svg" rel="icon" media="(prefers-color-scheme: dark)" />
<link href="/logo-dark.svg" rel="icon" media="(prefers-color-scheme: light)" />

<SEO 
  title={title}
  description={description}
  openGraph={{
    basic: {
      title: title + "'s Website",
      type: "website",
      image: imageUrl,
    },
    optional: {
      description: description,
    },
    image: {
      url: imageUrl,
      type: "image/jpeg",
      alt: "Meher Chaitanya"
    }
  }}
  twitter={{
    card: "summary_large_image",
    site: "@smc181002",
    creator: "@smc181002",
  }}
/>

<link rel="icon" type="image/x-icon" href="/logo-dark.svg" media="(prefers-color-scheme:light)"/>
<link rel="icon" type="image/x-icon" href="/logo-dark.svg" media="(prefers-color-scheme:no-preference)"/>
<link rel="icon" type="image/x-icon" href="/logo-light.svg" media="(prefers-color-scheme:dark)"/>
<link rel="preconnect" href="https://fonts.gstatic.com" />
<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible&family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<meta name="generator" content={Astro.generator} />
<link rel="alternate" type="application/rss+xml" title="Nischaya Â» Events" href={`${Astro.site}rss.xml`}>
<link rel="sitemap" href="/sitemap-index.xml">
