---

let {active} = Astro.props;

const options = [
    {
        name: "Upcoming",
        link: "/events",
    },
    {
        name: "Past",
        link: "/events/past",
    },
]

---

<div class="flex flex-col">
{
    options.map(option => (
        <a href={option.link} class={`px-6 py-2 rounded-full w-full hover:bg-neutral-variant-95 ${(active == option.name) ? "font-medium border-[1px] border-light-outline text-neutral-0" : "text-neutral-30"}`}>
            {option.name}
        </a>
    ))
}
</div>